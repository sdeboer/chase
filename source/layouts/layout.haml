%html(ng-app="ChaseApp")
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")

    %title= current_page.data.title || "Play Chase"

    = stylesheet_link_tag "normalize", "all"

  %body{class: page_classes}
    = yield
    .templates(style="display: none; visibility: hidden")
      = partial "templates/profile"
      = partial "templates/register"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js"
    = javascript_include_tag "all"
